<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Deposit Money</h3>
                </div>
                <div class="card-body">
                    <form action="/payment-gateway/pay.php" method="POST">
                        <input type="hidden" name="user" value="<%= user.token %>">
                        <div class="form-group">
                            <label for="amount">Enter Amount (₹)</label>
                            <input type="number" class="form-control" id="amount" name="am" min="100" required>
                            <small class="form-text text-muted">Minimum deposit amount is ₹100</small>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Proceed to Payment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 