<%- include('partials/header') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center mb-0">Deposit Money</h3>
                </div>
                <div class="card-body">
                    <form action="/payment-gateway/pay.php" method="POST" id="depositForm">
                        <input type="hidden" name="user" value="<%= user.token %>">
                        <div class="form-group mb-4">
                            <label class="form-label">Select Amount (₹)</label>
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="amount-option">
                                        <input type="radio" class="btn-check" name="am" id="amount100" value="100" required>
                                        <label class="btn btn-outline-primary w-100" for="amount100">₹100</label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="amount-option">
                                        <input type="radio" class="btn-check" name="am" id="amount200" value="200">
                                        <label class="btn btn-outline-primary w-100" for="amount200">₹200</label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="amount-option">
                                        <input type="radio" class="btn-check" name="am" id="amount500" value="500">
                                        <label class="btn btn-outline-primary w-100" for="amount500">₹500</label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="amount-option">
                                        <input type="radio" class="btn-check" name="am" id="amount1000" value="1000">
                                        <label class="btn btn-outline-primary w-100" for="amount1000">₹1000</label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="amount-option">
                                        <input type="radio" class="btn-check" name="am" id="amount2000" value="2000">
                                        <label class="btn btn-outline-primary w-100" for="amount2000">₹2000</label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="amount-option">
                                        <input type="radio" class="btn-check" name="am" id="amount5000" value="5000">
                                        <label class="btn btn-outline-primary w-100" for="amount5000">₹5000</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-wallet me-2"></i>Proceed to Payment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.amount-option .btn-check:checked + .btn-outline-primary {
    background-color: #0d6efd;
    color: white;
}
.amount-option .btn-outline-primary {
    padding: 15px;
    font-size: 1.1rem;
    font-weight: 500;
}
</style>

<%- include('partials/footer') %> 
